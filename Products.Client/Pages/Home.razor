    private IEnumerable<Product> FilteredProducts =>
    string.IsNullOrWhiteSpace(searchTerm)
    ? products
    : products.Where(p => p.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
    p.Description.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));

    private void SelectProduct(Product product)
    {
        Navigation.NavigateTo("/products/details/" + product.Id);
    }

    private void AddProduct()
    {
        Navigation.NavigateTo("/products/create");
    }

    private IUserContext auth;
    private bool _isAuthenticated;

    protected override async Task OnInitializedAsync()
    {
        _isAuthenticated = await LSService.IsAuthenticatedAsync();
        if (_isAuthenticated)
        {
            auth = await LSService.GetUserAsync();
        }
    }
    private async Task Logout()
    {
        await LSService.LogoutAsync();
        Navigation.NavigateTo("/");
    }
